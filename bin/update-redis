#!/usr/bin/env perl6

use Redis::Async;
use LibCurl::HTTP :subs;
use LibYAML;
use JSON::Fast;

my $r = Redis::Async.new('localhost:6379');

sub MAIN()
{
    for jget('https://modules.perl6.org/.json')<dists>.list -> $dist
    {
        $r.sadd("authors", $dist<author_id>, :async);
        $r.sadd("dists", $dist<name>, :async);

        $r.setnx("dist:$dist<name>", to-json($dist), :async);

        my $author-rec = { author_id => $dist<author_id> };
        $r.setnx("author:$dist<author_id>", to-json($author-rec), :async);

        $r.sadd("author-dist:$dist<author_id>", $dist<name>, :async);

        for $dist<tags>.list -> $tag
        {
            $r.sadd("tags", $tag, :async);

            my $tag-rec = { tag => $tag };
            $r.setnx("tag:$tag", to-json($tag-rec), :async);

            $r.sadd("tag-dist:$tag", $dist<name>, :async);
        }
    }
}
